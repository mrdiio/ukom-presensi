{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts",
        "tsx"
    ],
    "rootDir": "../src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/$1",
        "^@components/(.*)$": "<rootDir>/components/$1",
        "^@lib/(.*)$": "<rootDir>/lib/$1",
        "^@utils/(.*)$": "<rootDir>/utils/$1"
    },
    "setupFiles": [
        "./jest-setup.ts"
    ],
    "moduleDirectories": [
        "node_modules",
        "<rootDir>/"
    ]
}